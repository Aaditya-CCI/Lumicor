		<secure-properties:encrypt algorithm="Blowfish" />
	</secure-properties:config>
	<salesforce-composite:composite-config name="Salesforce_Composite_Config" doc:name="Salesforce Composite Config" doc:id="241cda60-56e5-45fd-83bf-af35d2508ce2" >
		<salesforce-composite:oauth-user-pass-connection consumerKey="${secure::salesforceComposite.client_id}" consumerSecret="${secure::salesforceComposite.client_secret}" username="${salesforceComposite.username}" password="${secure::salesforceComposite.password}" securityToken="${secure::salesforceComposite.securityToken}" tokenEndpoint="${salesforceComposite.link}" responseTimeout="2" responseTimeoutUnit="MINUTES"/>
